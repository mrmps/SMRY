# Upstash Redis (for caching)
# Get these from https://console.upstash.com
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# OpenRouter (for AI summaries)
OPENROUTER_API_KEY=

# Base URL (REQUIRED)
NEXT_PUBLIC_URL=https://your-domain.com

# Skip environment validation during Docker builds
# Set to "1" in Railway/CI environments where env vars aren't available at build time
SKIP_ENV_VALIDATION=

# Logo.dev (for company logos - get your publishable key from dashboard)
NEXT_PUBLIC_LOGODEV_TOKEN=

# Optional but recommended:
# Diffbot (required for direct and wayback sources)
DIFFBOT_API_KEY=

# Login
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Clickhouse Analytics (optional - for /admin/analytics dashboard)
# Local dev: use docker-compose up -d clickhouse, then these values:
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=clickhouse
CLICKHOUSE_DATABASE=smry_analytics
ANALYTICS_SECRET_KEY=dev_secret_key